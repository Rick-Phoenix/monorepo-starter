{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": ".cache/.tsbuildinfo",
    "paths": {
      "@monorepo-starter/utils": [
        "../utils/src/index.ts"
      ],
      "@monorepo-starter/utils/*": [
        "../utils/src/*"
      ]
    }
  },
  "references": [
    {
      "path": "../utils"
    }
  ],
  "include": ["src"],
  "exclude": ["templates"]
}
