{
"name": "@{{ projectName }}/{{ lintConfigName }}",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "import": "./eslint.config.js"
    }
  },
  "scripts": {
  "lint": "{{ "oxlint --config '../../.oxlintrc.json' && " if oxlint }}eslint",
  "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "{{ "oxlint --config '../../.oxlintrc.json' && " if oxlint }}eslint"
  },    
  "dependencies": {
  {% for name, version in lintConfigDeps %}
  "{{ name }}": "{{ version }}"{{ "," if loop.last !== true }}  
  {% endfor -%}
  }
}
