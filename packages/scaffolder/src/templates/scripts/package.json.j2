{
  "name": "@{{ projectName }}/scripts",
  "type": "module",
  "private": true,
  "description": "A collection of scripts for various uses",
  "scripts": {
  {% if lintStaged -%}
  "lint-staged": "lint-staged",
  {%- endif %}
  "lint": "oxlint && eslint"
  },
  {% if lintStaged -%}
  "lint-staged": {
  "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint && eslint"
  },
  {%- endif %}
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
  {% for workspacePkg in workspacePackages -%}
  {% if workspacePkg !== "linting-config" -%}
  "@{{ projectName }}/{{ workspacePkg }}": "workspace:*",
  {%- endif %}
  {%- endfor %}
    "@clack/prompts": "^0.10.1",
    "arktype": "^2.1.20",
    "dedent": "^1.5.3",
    "fast-glob": "^3.3.3",
    "find-up": "^7.0.0",
    "latest-version": "^9.0.0",
    "read-pkg": "^9.0.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    {% if includeLintConfig !== false -%}
    "@{{ projectName }}/linting-config": "workspace:*",
    {%- endif %}
    "@types/node": "^22.15.3",
    "@types/nunjucks": "^3.2.6",
    "eslint": "^9.23.0",
    "lint-staged": "^12.3.2",
    "oxlint": "catalog:",
    "typescript": "^5.8.2"
  }
}
