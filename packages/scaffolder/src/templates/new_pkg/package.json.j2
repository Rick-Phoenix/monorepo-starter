{
  "name": "@{{ projectName }}/{{ packageName }}",
  "type": "module",
  "private": true,
  {% if packageDescription -%}
  "description": "{{- packageDescription -}}",
  {%- endif %}
  "scripts": {
    "lint": "oxlint && eslint",
    {% if lintStaged !== false -%}
    "lint-staged": "lint-staged",
    {%- endif %}
    "clean": "rm -rf ./.cache && rm -rf ./dist"
  },
  {% if lintStaged !== false -%}
  "lint-staged": {
  "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint && eslint"
  },
  {%- endif %}
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    {% for name, version in dependencies -%}
    "{{ name }}": "{{ version }}"{{ "," if loop.last !== true }}
    {% endfor -%}
  },
  "devDependencies": {
    {% if lintConfigSource -%}
      "{{ lintConfigName }}": "{{ lintConfigVersion }}",
    {%- endif %}
    {% for name, version in devDependencies -%}
    "{{ name }}": "{{- version }}",
    {% endfor -%}    
    "@types/node": "^22.15.3",
    "typescript": "^5.8.2",
    "eslint": "^9.23.0",
    "@eslint/config-inspector": "^1.0.2",
    "oxlint": "catalog:",
    "lint-staged": "^12.3.2"
  }
}

