{
  "name": "@{{ projectName }}/{{ packageName }}",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  {% if packageDescription %}
  "description": "{{ packageDescription }}",
  {% endif %}
  "scripts": {
    {% if lintCommand %}
    "lint": "{{ lintCommand }}",
    {% endif %}
    {% if devDependencies['lint-staged'] %}
    "lint-staged": "lint-staged",
  {% endif %}
    "clean": "rm -rf ./.cache && rm -rf ./dist"
  },
  {% if devDependencies['lint-staged'] %}
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      {% for command in lintStagedCommands %}
      "{{ command }}"{{ "," if loop.last !== true }}  
      {% endfor %}
    ]
  },
  {% endif %}
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    {% for name, version in dependencies %}
    "{{ name }}": "{{ version }}"{{ "," if loop.last !== true }}
    {% endfor %}
  },
  "devDependencies": {
    {% for name, version in devDependencies %}
      "{{ name }}": "{{ version }}",
    {% endfor %}    
      "@types/node": "^22.15.3"
  }
}

