{
  "name": "@{{ projectName }}/scripts",
  "type": "module",
  "private": true,
  "description": "A collection of scripts for various uses",
  "scripts": {
  "lint": "{{ "oxlint --config '../../.oxlintrc.json' && " if oxlint }}eslint",
  "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "{{ "oxlint --config '../../.oxlintrc.json' && " if oxlint }}eslint"
  }, 
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "arktype": "^2.1.20",
    "dedent": "^1.5.3",
    "fast-glob": "^3.3.3",
    "find-up": "^7.0.0",
    "latest-version": "^9.0.0",
    "read-pkg": "^9.0.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    {% if lintConfig -%}
    "@{{ projectName}}/{{ lintConfigName }}": "workspace:*",
    {%- endif %}
    "@eslint/config-inspector": "^1.0.2",
    "@types/node": "^22.15.3",
    "@types/nunjucks": "^3.2.6",
    "eslint": "^9.23.0",
    "lint-staged": "^12.3.2",
    {{ '"oxlint": "catalog:",' if oxlint }}
    "typescript": "^5.8.2"
  }
}
