{% if hooks.infisical -%}
if ! [[ $(command -v infisical) ]]; then
echo "Infisical binary not found."
exit 1
fi

infisical scan git-changes --staged --verbose
{%- endif %}

{% if hooks.lintStaged -%}
{% if moon and tasks %}
moon run :lint-staged
{% elif packageManager === 'pnpm' %}
pnpm run lint-staged
{% else %}
lint-staged
{% endif %}
{%- endif %}
