{
  "name": "@monorepo-starter/scaffolder",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "author": "Rick-Phoenix",
  "description": "A generator for various types of apps and packages",
  "bin": {
    "init-repo": "./dist/bin/init_repo.js",
    "create-package": "./dist/bin/create_package.js",
    "create-barrel": "./dist/bin/create_barrel.js",
    "init-moon": "./dist/bin/init_moon.js",
    "gen-scripts": "./dist/bin/gen_scripts.js",
    "gen-eslint": "./dist/bin/gen_eslint.js",
    "gen-tsdown": "./dist/bin/gen_tsdown.js",
    "gen-vitest": "./dist/bin/gen_vitest.js",
    "update-catalog": "./dist/bin/update_catalog.js",
    "install-catalog": "./dist/bin/install_catalog.js",
    "gen-oxlint": "./dist/bin/gen_oxlint.js"
  },
  "scripts": {
    "lint": "oxlint -c '../../.oxlintrc.json' && eslint",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": [
      "oxlint --config '../../.oxlintrc.json'",
      "eslint"
    ]
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@clack/prompts": "catalog:",
    "@commander-js/extra-typings": "^13.1.0",
    "@monorepo-starter/utils": "workspace:*",
    "arktype": "catalog:",
    "commander": "^13.1.0",
    "dedent": "^1.6.0",
    "download": "^8.0.0",
    "fast-glob": "^3.3.3",
    "nunjucks": "^3.2.4",
    "radashi": "^12.5.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.1",
    "@eslint/config-inspector": "^1.0.2",
    "@monorepo-starter/linting-config": "workspace:*",
    "@types/bun": "^1.2.13",
    "@types/download": "^8.0.5",
    "@types/node": "^22.15.18",
    "@types/nunjucks": "^3.2.6",
    "eslint": "catalog:",
    "lint-staged": "catalog:",
    "memfs": "catalog:",
    "oxlint": "catalog:",
    "rollup-plugin-copy": "^3.5.0",
    "tsdown": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:"
  }
}
