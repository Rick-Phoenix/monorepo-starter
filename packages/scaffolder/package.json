{
  "name": "@monorepo-starter/scaffolder",
  "type": "module",
  "private": true,
  "author": "Rick-Phoenix",
  "description": "A generator for various types of apps and packages",
  "bin": {
    "init-repo": "./dist/bin/init_repo.js",
    "create-package": "./dist/bin/create_package.js",
    "init-moon": "./dist/bin/init_moon.js",
    "gen-scripts": "./dist/bin/gen_scripts.js",
    "gen-eslint": "./dist/bin/gen_eslint.js",
    "gen-tsdown": "./dist/bin/gen_tsdown.js",
    "gen-vitest": "./dist/bin/gen_vitest.js",
    "gen-oxlint": "./dist/bin/gen_oxlint.js"
  },
  "scripts": {
    "lint": "oxlint && eslint",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,mjs,cjs,jsx,ts,mts,cts,tsx,vue,astro,svelte}": "oxlint && eslint"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "dependencies": {
    "@clack/prompts": "^0.10.1",
    "@commander-js/extra-typings": "^13.1.0",
    "@monorepo-starter/utils": "workspace:*",
    "@types/download": "^8.0.5",
    "arktype": "^2.1.20",
    "commander": "^13.1.0",
    "dedent": "^1.5.3",
    "download": "^8.0.0",
    "fast-glob": "^3.3.3",
    "find-up": "^7.0.0",
    "fs-extra": "^11.3.0",
    "latest-version": "^9.0.0",
    "nunjucks": "^3.2.4",
    "package-up": "^5.0.0",
    "path-type": "^6.0.0",
    "read-package-up": "^11.0.0",
    "read-pkg": "^9.0.1",
    "write-json-file": "^6.0.0",
    "yaml": "^2.7.1"
  },
  "devDependencies": {
    "@eslint/config-inspector": "^1.0.2",
    "@monorepo-starter/linting-config": "workspace:*",
    "@types/bun": "^1.2.10",
    "@types/node": "^22.15.3",
    "@types/nunjucks": "^3.2.6",
    "eslint": "^9.23.0",
    "lint-staged": "^12.3.2",
    "oxlint": "catalog:",
    "rollup-plugin-copy": "^3.5.0",
    "tsdown": "0.11.0-beta.4",
    "typescript": "^5.8.2"
  }
}
