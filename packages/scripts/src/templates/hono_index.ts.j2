import { arktypeValidator } from "@hono/arktype-validator";
import { type } from "arktype";
import { Hono } from "hono";

const schema = type({
  name: "string",
  age: "number",
});

const app = new Hono();

app.post("/author", arktypeValidator("json", schema), (c) => {
  const data = c.req.valid("json");
  return c.json({
    success: true,
  });
});

export default app
