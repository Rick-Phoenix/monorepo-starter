{
  "name": "{{ projectName }}",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    {% if lint-staged %}
    "lint-staged": "pnpm -r lint-staged",
    {% endif %}
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    {% for dep in rootPackages -%}
    "{{ dep.name }}": "{{ dep.version }}"{{- "," if loop.last !== true }}
    {% endfor -%} 
  }
}
