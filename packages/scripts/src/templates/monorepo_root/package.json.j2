{
  "name": "{{ projectName }}",
  "version": "0.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    {%- if lintStaged %}
    "lint-staged": "pnpm -r lint-staged",
    {%- endif %}
    "lint": "pnpm -r lint"
  },
  "dependencies": {
    {% if dependencies | length > 0 %}
    {%- for name, version in dependencies -%}
    "{{ name }}": "{{ version }}"{{- "," if loop.last !== true }}
    {%- endfor %} 
    {%- endif %}
  },
  "devDependencies": {
    {% if devDependencies | length > 0 %}
    {%- for name, version in devDependencies -%}
    "{{ name }}": "{{ version }}"{{- "," if loop.last !== true }}
    {%- endfor %} 
    {%- endif %}
  }
}
